@model Org.Ktu.Isk.P175B602.Autonuoma.Models.Users.Users

@* this will also be used as page title in main layout *@
@{
	ViewData["title"] = "User delete";
}

@* content header *@
<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>

@* content itself *@
<div class="main-content-ced">
	@using (Html.BeginForm(FormMethod.Post, new { @class = "entity-d" }))
	{
		@Html.AntiForgeryToken()

		<fieldset>
			<legend class="confirm-msg">Ar tikrai norite šalinti šį Spell?</legend>

			<dl>
				<dt>@Html.DisplayNameFor(m => m.id)</dt>
				<dd>@Html.DisplayFor(m => m.id)</dd>

				<dt>@Html.DisplayNameFor(m => m.Username)</dt>
				<dd>@Html.DisplayFor(m => m.Username)</dd>

				<dt>@Html.DisplayNameFor(m => m.Email)</dt>
				<dd>@Html.DisplayFor(m => m.Email)</dd>

				<dt>@Html.DisplayNameFor(m => m.AccessType)</dt>
				<dd>@Html.DisplayFor(m => m.AccessType)</dd>
				
				<dt>@Html.DisplayNameFor(m => m.CreationDate)</dt>
				<dd>@Html.DisplayFor(m => m.CreationDate)</dd>

			</dl>

			@if (ViewData["deletionNotPermitted"] != null)
			{
					<div class="fail-msg">
						<i class="fa-solid fa-circle-exclamation"></i> Šio darbuotojo pašalinti negalima, nes 
						jis turi ryšių į priklausomas esybes.
					</div>
			}
			else
			{
					<div class="buttons">
						<button
					formaction="@Url.Action("DeleteConfirm", new {id = Model.id})"
					class="btn btn-danger"
					style="white-space: nowrap;"
				><i class="fa-solid fa-trash"></i> Šalinti</button>
					</div>			
			}
		</fieldset>
	}
</div>

@* content footer *@
<div class="main-content-footer">
	<span class="title"></span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>