@{
}
@model List<WebApp.Models.Student>

<h1>Students</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Enrollment Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.ID</td>
                <td>@student.LastName</td>
                <td>@student.FirstMidName</td>
                <td>@student.EnrollmentDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
